<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_makanan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context="com.uinmalang.ahmadriza.apik.Makanan"
    android:background="@android:color/white"
    >

    <TextView
        android:id="@+id/txtHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hitung Kalori"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:fontFamily="cursive"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        />

    <LinearLayout
        android:id="@+id/resultView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtHead"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:paddingRight="5dp"
            android:textColor="@color/colorPrimary"
            android:gravity="right"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Display2"
            />

        <TextView
            android:paddingLeft="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="KKal"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:textColor="@color/grey"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Display2"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/resultView"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/backwithborder"
            android:elevation="5dp"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/nasi"
                android:padding="4dp"
                />
            <TextView
                android:paddingLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Makanan Pokok"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:background="@color/colorPrimary"
                android:src="@drawable/dropdown"
                android:padding="6dp"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:hint="berat"
                android:textColor="@color/grey"
                android:gravity="center"
                android:textColorHint="@color/hint"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:text="gr"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/backwithborder"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ikan"
                android:padding="3dp"
                />

            <TextView
                android:paddingLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Lauk Pauk"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:background="@color/colorPrimary"
                android:src="@drawable/dropdown"
                android:padding="6dp"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:hint="berat"
                android:textColor="@color/grey"
                android:gravity="center"
                android:textColorHint="@color/hint"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:text="gr"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/backwithborder"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/snack"
                android:padding="3dp"
                />

            <TextView
                android:paddingLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Snack"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:background="@color/colorPrimary"
                android:src="@drawable/dropdown"
                android:padding="6dp"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:hint="berat"
                android:textColor="@color/grey"
                android:gravity="center"
                android:textColorHint="@color/hint"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:text="gr"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/backwithborder"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/minum"
                android:padding="4dp"
                />

            <TextView
                android:paddingLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Minuman"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:background="@color/colorPrimary"
                android:src="@drawable/dropdown"
                android:padding="6dp"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:hint="jml"
                android:textColor="@color/grey"
                android:gravity="center"
                android:textColorHint="@color/hint"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:text="ml"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btnHitung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:text="HITUNG"
        android:padding="15dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        />
</RelativeLayout>
